<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2 class="text-center">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.text_field :username, autofocus: true, placeholder: "Username", required: true, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", required: true, class: "form-control input-lg" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>